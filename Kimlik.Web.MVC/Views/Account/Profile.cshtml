@model ProfilePasswordMViewModel
@{
    ViewBag.Title = $"{Model.ProfileViewModel.Name} {Model.ProfileViewModel.Surname} Profil Sayfası";
}

<h2>@($"{Model.ProfileViewModel.Name} {Model.ProfileViewModel.Surname} Profil Sayfası")</h2>
<h3>@($"Üyelik Tarihi: {Model.ProfileViewModel.RegisterDate:D} ")</h3>

<div class="row">
    <div class="col-md-6">
        <span class="text-danger">@Html.ValidationSummary()</span>
        @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.ProfileViewModel.Name, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProfileViewModel.Name, new { @class = "form-control", placeholder = "Ad.." })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.Name)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ProfileViewModel.Surname, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProfileViewModel.Surname, new { @class = "form-control", placeholder = "Soyad.." })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.Surname)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ProfileViewModel.UserName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProfileViewModel.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı..", @readonly = "true" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.UserName)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ProfileViewModel.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProfileViewModel.Email, new { @class = "form-control", placeholder = "Email..", type = "email" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.Email)</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Profili Güncelle</button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <span class="text-danger">@Html.ValidationSummary()</span>
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.ChangePasswordViewModel.OldPassword, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ChangePasswordViewModel.OldPassword, new { @class = "form-control", placeholder = "Eski Şifre..", type = "password" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ChangePasswordViewModel.OldPassword)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ChangePasswordViewModel.Password, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ChangePasswordViewModel.Password, new { @class = "form-control", placeholder = "Şifre..", type = "password" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ChangePasswordViewModel.Password)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ChangePasswordViewModel.ConfirmPassword, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ChangePasswordViewModel.ConfirmPassword, new { @class = "form-control", placeholder = "Şifre Tekrar..", type = "password" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ChangePasswordViewModel.ConfirmPassword)</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Şifreyi Güncelle</button>
                </div>
            </div>
        }
    </div>
</div>